/* Wider content area */
.max-w-prose {
  max-width: 50rem !important;
}

/* Reduce horizontal rule spacing */
article hr,
.content hr,
main hr {
  margin: 2rem 0 !important;
}

/* Increase body text size */
article p,
.content p,
main p {
  font-size: 1.125rem;
  line-height: 1.75;
}

/* ===== HOMEPAGE STYLES ===== */

.homepage {
  max-width: 52rem;
  margin: 0 auto;
  padding: 2rem 1.5rem 1rem 1.5rem;
}

/* Hero section */
.homepage .hero {
  text-align: center;
  padding: 3.5rem 0 2.5rem 0;
  margin-bottom: 0.5rem;
}

.homepage .question {
  font-family: 'DM Serif Display', Georgia, serif;
  font-size: 3.25rem;
  font-weight: 400;
  line-height: 1.15;
  margin-bottom: 2rem;
  letter-spacing: -0.01em;
}

.homepage .elevator {
  font-size: 1.35rem;
  line-height: 1.7;
  max-width: 36rem;
  margin: 0 auto;
  color: rgb(var(--color-neutral-600));
}

/* Section cards */
.homepage .section-card {
  background-color: transparent;
  border: none;
  box-shadow: none;
  padding: 2rem 0;
  margin-bottom: 1rem;
}

.homepage .priority-card {
  margin-top: 1.5rem;
}

.homepage .card-heading {
  font-family: 'DM Serif Display', Georgia, serif;
  font-size: 1.5rem;
  font-weight: 400;
  text-align: center;
  margin-bottom: 0.5rem;
  color: rgb(var(--color-neutral-700));
}

.homepage .card-subheading {
  font-size: 1.35rem;
  text-align: center;
  margin-top: -1rem;
  margin-bottom: 1.5rem;
  color: rgb(var(--color-neutral-500));
}

.homepage .paths-section {
  border-top: 1px solid rgba(var(--color-neutral-400), 0.3);
  padding-top: 2rem;
  margin-top: 2rem;
}

.homepage .priority-section {
  border-top: 1px solid rgba(var(--color-neutral-400), 0.3);
  padding-top: 2.5rem;
  margin-top: 1rem;
}

/* Link groups */
.homepage .link-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.75rem;
}

.homepage .path-link {
  color: rgb(var(--color-primary-700));
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  padding: 0.5rem 1.25rem;
  border: 1px solid rgba(var(--color-primary-400), 0.5);
  border-radius: 2rem;
  background-color: transparent;
  transition: all 0.15s ease;
}

.homepage .path-link:hover {
  color: rgba(var(--color-neutral), 1);
  text-decoration: none;
  background-color: rgba(var(--color-primary-600), 1);
  border-color: rgba(var(--color-primary-600), 1);
}

/* CTA section */
.homepage .cta {
  text-align: center;
  padding: 2rem 0 0.75rem 0;
  font-size: 1.15rem;
}

.homepage .cta a {
  color: rgb(var(--color-primary-600));
  text-decoration: underline;
  text-decoration-color: rgba(var(--color-primary-300), 1);
  font-weight: 500;
  padding: 0.15em 0.35em;
  margin: -0.15em -0.35em;
}

.homepage .cta a:hover {
  color: rgba(var(--color-neutral), 1);
  text-decoration: none;
  background-color: rgba(var(--color-primary-600), 1);
  border-radius: 0.09rem;
}

/* Closing section */
.homepage .closing-section {
  text-align: center;
  padding-top: 0.75rem;
  padding-bottom: 0rem;
}

.homepage .closing {
  font-style: italic;
  font-size: 1.2rem;
  color: rgb(var(--color-neutral-500));
  letter-spacing: 0.01em;
}

/* DI Messages listing */
.di-messages-list {
  margin: 2rem 0;
}

.di-message-preview {
  margin-bottom: 1rem;
  padding-bottom: 0rem;
  border-bottom: 1px solid rgba(var(--color-neutral-300), 0.5);
}

.di-message-preview:last-child {
  border-bottom: none;
}

.di-message-preview h3 {
  margin-bottom: 0.25rem;
}

.di-message-meta {
  font-size: 0.9rem;
  color: rgb(var(--color-neutral-500));
  margin-bottom: 0.5rem;
}

.di-message-excerpt {
  font-style: italic;
  color: rgb(var(--color-neutral-600));
}

/* Contact Form */
.contact-form {
  max-width: 32rem;
  margin: 2rem 0;
}

.contact-form .form-group {
  margin-bottom: 1rem;
}

.contact-form input,
.contact-form textarea,
.contact-form select {
  width: 100%;
  padding: 0.75rem 1rem;
  background-color: rgba(var(--color-neutral-100), 1);
  border: 1px solid rgba(var(--color-neutral-400), 0.5);
  border-radius: 4px;
  color: rgb(var(--color-neutral-700));
  font-family: inherit;
  font-size: 1rem;
  transition: all 0.25s ease;
}

.contact-form input::placeholder,
.contact-form textarea::placeholder {
  color: rgba(var(--color-neutral-500), 1);
}

.contact-form input:focus,
.contact-form textarea:focus,
.contact-form select:focus {
  outline: none;
  border-color: rgba(var(--color-primary-500), 0.8);
}

.contact-form textarea {
  min-height: 150px;
  resize: vertical;
}

.contact-form select {
  cursor: pointer;
}

.contact-form button {
  display: inline-block;
  padding: 0.75rem 2rem;
  background-color: rgb(var(--color-primary-600));
  border: none;
  border-radius: 4px;
  color: rgb(var(--color-neutral-100));
  font-family: inherit;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.25s ease;
}

.contact-form button:hover {
  background-color: rgb(var(--color-primary-700));
}
